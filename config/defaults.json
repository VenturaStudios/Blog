{
  "main": "app.js",
  
  "generatedDir": "${appRoot}/generated",
  "dataDir": "${appRoot}/data",
  "assets": {
    "assetsDir": "${generatedDir}/assets",
    "viewsDir": "${generatedDir}/views",
    "publicUrlRoot": "/public"
  },

  "logger": {
    "root": {
      "level": "info",
      "streams": [
        {
          "level": "debug",
          "stream": "process.stdout",
          "streamOptions": {
            "mode": "short", "prettyPrint": true
          }
        }
      ]
    },
    "express/access": {
      "level": "none"
    }
  },
  "next": "custom.json"
}